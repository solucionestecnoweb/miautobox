<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <record model="ir.ui.view" id="id_categoria_tree">
            <field name="name">id.categoria.tree</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_list_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='display_name']" position="before">
                    <field name="id" string="ID interno" readonly="1"/>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="id_categoria_form">
            <field name="name">id.categoria.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
               
                <xpath expr="//field[@name='parent_id']" position="before">
                    <field name="id" string="ID interno" readonly="1"/>
                    
                </xpath>
                
            </field>
        </record>

      

    </data>
</odoo>