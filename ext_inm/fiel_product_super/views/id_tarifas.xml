<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <record model="ir.ui.view" id="id_tarifas_tree">
            <field name="name">id.tarifas.tree</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="id" string="ID interno" readonly="1"/>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="id_tarifas_form">
            <field name="name">id.tarifas.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
               
                <xpath expr="//field[@name='currency_id']" position="before">
                    <field name="id" string="ID interno" readonly="1"/>
                    
                </xpath>
                
            </field>
        </record>

      

    </data>
</odoo>