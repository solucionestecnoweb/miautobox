<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        
        <record model="ir.ui.view" id="product_adds_template_form">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="before">
                    <field name="modelo"/>
                    <field name="brand_id"/>
                    <field name="filler"/>
                    <field name="group_id"/>
                    <field name="tarps"/>
                    <field name="load_speed"/>
                    <field name="rin"/>
                    <field name="tier"/>
                </xpath>
                <xpath expr="//field[@name='type']" position="after">
                    <field name="type_cauchos"/>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="qty_hq"/>
                    <field name="deote"/>
                </xpath>
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="service_in"/>
                    <field name="medidas"/>
                    <field name="construction_type"/>
                    <field name="clase"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_adds_product_form">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="before">
                    <field name="modelo"/>
                    <field name="brand_id"/>
                    <field name="filler"/>
                    <field name="group_id"/>
                    <field name="tarps"/>
                    <field name="load_speed"/>
                    <field name="rin"/>
                    <field name="tier"/>
                </xpath>
                <xpath expr="//field[@name='type']" position="after">
                    <field name="type_cauchos"/>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="qty_hq"/>
                    <field name="service_in"/>
                    <!--field name="stock_inicial" invisible="1"/-->
                    <field name="no_despachado" invisible="1"/>
                    <field name="medidas"/>
                    <field name="construction_type"/>
                    <field name="clase"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_picking_filler_form">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="filler_per"/>
                    <field name="situacion" readonly="1"/>
                    <field name="entregado" widget="boolean_toggle"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="before">
                    <button string="Situación apartado" name="change_situacion_apartado" attrs="{'invisible': [('situacion', 'in', ('Apartado', 'Analisis'))]}" type="object" class="oe_highlight"/>
                    <button string="Situación análisis" name="change_situacion_analisis" attrs="{'invisible': ['|',('situacion', 'in', ('Analisis', False)), ('uid', '!=', 108)]}" type="object" class="oe_highlight"/>
                </xpath>
            </field>
        </record>

        <record id="view_stock_move_line_detailed_operation_tree" model="ir.ui.view">
            <field name="name">stock.move.line.inherit.view.form</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='package_id']" position="before">
                    <field name="analytic_account_id" domain="[('company_id', '=', company_id)]" options="{'no_create': True, 'no_create_edit':True}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>