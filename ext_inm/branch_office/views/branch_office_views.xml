<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="branch_office_tree" model="ir.ui.view">
			<field name="name">branch.office.tree</field>
			<field name="model">branch.office</field>
			<field name="arch" type="xml">
                <tree string="Sucursal">
                    <field name="code" decoration-bf="1"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
			</field>
		</record>

		<record id="branch_office_form" model="ir.ui.view">
			<field name="name">branch.office.form</field>
			<field name="model">branch.office</field>
			<field name="arch" type="xml">
                <form string="Sucursal">
                    <sheet>
                        <div class="oe_title">
                            <span class="o_form_label">CÃ³digo</span>
                            <h1 class="mt0">
                                <field name="code" placeholder="Codigo" readonly="1"/>
                            </h1>
                       </div>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                            </group>
                             <group>
                                 <field name="active" widget="boolean_toggle"/>
                             </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
			</field>
		</record>

        <record id="action_branch_office" model="ir.actions.act_window">
            <field name="name">Sucursal</field>
            <field name="res_model">branch.office</field>
            <field name="view_mode">tree,form</field>
        </record>
	</data>
</odoo>
