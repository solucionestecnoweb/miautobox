<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="vista_from_creditos" model="ir.ui.view">
        <field name="name">vista.from.creditos</field>
        <field name="model">pos.creditos</field>
        <field name="arch" type="xml">
            <form string="Credito clientes pendientes">
                <header>
                        <field name="status_credito" widget="statusbar" statusbar_visible="no_paid,paid" readonly="True"/>

                        <button name="aprobar" string="Pagar" type="object" attrs="{'invisible': [('status_credito', '=','paid')]}"/>
                        <button name="cancel" string="Cancelar" type="object" attrs="{'invisible': [('status_credito', '!=','paid')]}"/>
                        <!-- attrs="{'invisible': [('manual', '=',False)]}"-->
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="cliente_id" />
                            <field name="pos_order_id" />
                            <field name="origen" invisible="0"/>
                        </group>
                        <group>
                            <field name="payment_method_id" domain="[('motodo_credito_cliente', '=',True)]"/>
                            <field name="date_order" />
                            <field name="amount" string="Deuda (Bs)" />
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record id="vista_tree_creditos" model="ir.ui.view">
        <field name="name">vista.tree.creditos</field>
        <field name="model">pos.creditos</field>
        <field name="arch" type="xml">
            <tree string="Creditos Pendientes por cobrar" >
                <field name="pos_order_id"></field>
                <field name="cliente_id"></field>   
                <field name="payment_method_id" string="Metodo"></field>
                <field name="amount" string="Monto adeudado (Bs)" />
                <field name="status_credito" string="Status"/>
            </tree>
        </field>
    </record>

    <record id="action_creditos_pendientes" model="ir.actions.act_window">
        <field name="name">Registro de Creditos Pendientes</field>
        <field name="res_model">pos.creditos</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="vista_tree_creditos"></field>
    </record>
    <!-- Menu para los creditos pendientes -->
    <menuitem 
        id="menu_creditos_pendientes"
        name="Creditos de Clientes"
        parent="point_of_sale.menu_point_of_sale"
        action="action_creditos_pendientes"
        sequence="4"
    />
</odoo>