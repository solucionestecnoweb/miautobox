<odoo>
  <data>
     <record id="herencia_pos_payment_credit_cliente" model="ir.ui.view">
        <field name="name">vista.credit.cliente</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_cash_count']" position="before">  
                      
                <field name="motodo_credito_cliente" string="Se usa para creditos a clientes?" invisible="0"/>
            </xpath>
            
        </field>
     </record>   
  </data>
</odoo>