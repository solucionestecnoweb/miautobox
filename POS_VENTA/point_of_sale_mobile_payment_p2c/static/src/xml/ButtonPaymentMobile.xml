<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-controls')]" position="inside">
            <div t-if="env.pos.get_order().show_payment_mobile_option">
                <div id="my_button" class="button js_mobile_payment"  style="margin-top: 10px;" t-on-click="_onClickMobilePayment">
                    <t t-if="env.pos.get_order().get_change() > 0">
                           <i class="fa fa-mobile" /> Vuelto Pago Móvil
                    </t>
                 
                    <t t-else="">
                        <i class="fa fa-mobile" /> Pago Móvil
                    </t>
                 
                </div>
               
            </div>
        </xpath>
    </t>

</templates>